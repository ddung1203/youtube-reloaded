extends ../base
include ../mixins/video

block content 
  div.profile__data
    if loggedInUser.socialOnly
      img.avatar(src=loggedInUser.avatarUrl, width="100", height="100")
    else if !loggedInUser.socialOnly
      img.avatar(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    else if !loggedInUser.avatarUrl
      span üòç
    else
      img.avatar(src=user.avatarUrl).avatar
    h3=user.name
  div.video-grid
    each video in user.videos
      +video(video)
    else
      span.empty__message No videos found