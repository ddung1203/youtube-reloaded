extends base

block content 
  if errorMessage
    script.
      alert("#{errorMessage}")
  form(method="POST")
    input(placeholder="Username", name="username", type="text", required)
    input(placeholder="Password", name="password", type="password", required)
    input(type="submit", value="Login")
    br
    a(href="https://github.com/login/oauth/authorize?client_id=9207c24be7d458e1d66f") Continue wit GitHub
  hr
  div
    span Don't have an account?
    br
    a(href="/join") Create now